    // Definição da classe Log

    define('LOG_PATH', $_SERVER['DOCUMENT_ROOT'].'LogServer3/log/log.log');
    define('BASE_LOG', "[GameGuard][LogServer3] ");

    class Log {
        private $path = LOG_PATH;

        public function putLog($_log) {

            if (!isset($_log) || empty($_log))
                return 1;

            file_put_contents($this->path, $this->nowDate().' ['.$this->getIP().'] '.BASE_LOG.$_log.PHP_EOL, FILE_APPEND);
        }

        private function nowDate() {
            
            $tmp = '0000-00-00 00:00:00';

            $now = new DateTime();

            $tmp = $now->format("Y-m-d H:i:s");

            return $tmp;
        }

        private function getIP() {

            $ip = ':::?';

            $ip = getenv("REMOTE_ADDR") ?? $ip;

            return $ip;
        }
    }

    class sLog {

        static private $log = null;

        static public function getInstance() {

            if (self::$log == null)
                self::$log = new Log();

            return self::$log;
        }
    }
